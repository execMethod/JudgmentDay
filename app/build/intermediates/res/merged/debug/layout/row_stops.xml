<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:padding="2dp">

  <LinearLayout
    android:id="@+id/rowstop_state"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_width="84dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    
    <ImageView
      android:id="@+id/rowstop_icon"
      android:src="@drawable/bus_blue_src"
      android:layout_margin="2dp"
      android:layout_width="48dp"
      android:layout_height="48dp"/>
    
    <TextView
      android:id="@+id/rowstop_late"
      android:text="約36分遅れ"
      android:textSize="4pt"
      android:textColor="@color/black"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>
  
  <TextView
    android:id="@+id/rowstop_type"
    android:text="お気に入りバス停"
    android:textSize="4pt"
    android:padding="0dp"
    android:textColor="@color/grey4"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@id/rowstop_state"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"/>

  <TextView
    android:id="@+id/rowstop_line"
    android:text="JRバス　テクノパーク線　新78"
    android:textSize="6pt"
    android:padding="0dp"
    android:textColor="@color/black"
    android:layout_below="@id/rowstop_type"
    android:layout_toRightOf="@id/rowstop_state"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  />

  <TextView
    android:id="@+id/rowstop_stop"
    android:text="第２テクノパーク"
    android:textSize="8pt"
    android:padding="0dp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:layout_below="@id/rowstop_line"
    android:layout_toRightOf="@id/rowstop_state"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"/>

  <TextView
    android:id="@+id/rowstop_prog"
    android:text="次のバスは18:32です。"
    android:textSize="6pt"
    android:padding="0dp"
    android:textColor="@color/grey4"
    android:layout_below="@id/rowstop_stop"
    android:layout_toRightOf="@id/rowstop_state"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"/>

</RelativeLayout>

